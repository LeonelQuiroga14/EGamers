@model Gamers.Web.Models.ImagenViewModel

@{
    ViewBag.Title = "UploadImages";
}

@using (Html.BeginForm("UploadImages", "Juego", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ImagenesJuego</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.JuegoId, "JuegoId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("JuegoId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.JuegoId, "", new { @class = "text-danger" })
        </div>
    </div>
        <br />
        <br />
        <div class="form-group">
            <div class="row">
                <div class="col-md-9">
                    <span class="span4">
                        @Html.TextBoxFor(model => model.Image, new { type = "file",Multiple="Multiple",@class="input-files" })
                        @*<input type="file" name="uploadImages" multiple="multiple" class="input-files" />*@
                    </span>
                </div>   
                <div class="col-md-3">
                    @*<div class="col-md-offset-2 col-md-10">*@
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    @*</div>*@
                </div>

            </div>
            
        </div>
    </div>
   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
